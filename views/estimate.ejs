<html>

<head>
    <%- include('layouts/navbar'); -%>
</head>

<body>
    <h1 class="font" style="color:black;">Get an Estimate</h1>

    <div class="imgUploadDiv" style="position: relative;">
        <label id="imgLabel" for="img" class="font custom-file-upload">Upload</label>

        <!-- Invisible button inside the imgUploadDiv -->
        <button id="invisibleButton" onclick="handleButtonClick()">New Button</button>
    </div>

    <form action="/action_page.php">
        <input type="file" id="img" name="img" accept="image/*" onchange="loadFile(event)">
    </form>

    <script>
        var loadFile = function (event) {
            var image = document.createElement("img");
            image.src = URL.createObjectURL(event.target.files[0]);
            image.width = 500;
            image.height = 300;
            var label = document.getElementById("imgLabel");
            label.parentNode.replaceChild(image, label);
        };

        var handleButtonClick = function () {
            alert("Invisible button clicked!");
            // Add your functionality here
        };

    </script>
</body>

</html>
