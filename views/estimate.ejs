<html>

<head>
    <%- include('layouts/navbar'); -%>
</head>

<body>
    <h1>Get an Estimate</h1>

    <div class="imgUpload">
        <label id = "imgLabel" for="img" class="custom-file-upload">Upload</label>
    </div>

    <form action="/action_page.php">
        <input type="file" id="img" name="img" accept="image/*" onchange="loadFile(event)">
    </form>
    
    <script>
        var loadFile = function(event) {
            var image = document.createElement("img");
            image.src = URL.createObjectURL(event.target.files[0]);
            image.width = 500;
            image.height = 300;
            var label = document.getElementById("imgLabel");
            label.parentNode.replaceChild(image, label);
        };
    </script>
</body>

</html> 